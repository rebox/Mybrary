<h2>Search Books</h2>
<form action="/books" method="GET">
  <div>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= searchOptions.title; %>" />
  </div>
  <div>
    <label for="publishedAfter">Published After</label>
    <input
      type="date"
      name="publishedAfter"
      value="<%= searchOptions.publishedAfter; %>"
    />
  </div>
  <div>
    <label for="publishedBefore">Published Before</label>
    <input
      type="date"
      name="publishedBefore"
      value="<%= searchOptions.publishedBefore; %>"
    />
  </div>

  <button type="submit">Search</button>
</form>
<br />
<div style="display: flex">
  <% books.forEach(book => { %>
  <div style="margin-right: 8px">
    <a href="/books/<%= book.id;  %>">
      <img height="150" width="100" src="<%= book.coverImagePath; %>" alt="" />
      <div><%= book.title %></div>
    </a>
  </div>
  <% }); %>
</div>
