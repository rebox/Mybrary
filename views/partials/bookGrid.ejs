<% bookCoverClass = locals.large ? "book-cover-large" : ""; %> <% bookGridClass
= locals.large ? "book-grid-large" : ""; %>
<!--  -->
<div class="book-grid <%= bookGridClass; %>">
  <% books.forEach(book => { %>
  <div style="margin-right: 8px">
    <a href="/books/<%= book.id; %>">
      <img
        class="book-cover <%= bookCoverClass; %>"
        src="<%= book.coverImagePath; %>"
        alt=""
      />
      <div><%= book.title %></div>
    </a>
  </div>
  <% }); %>
</div>
